<mvc:View
    controllerName="com.genrep.book.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'com/genrep/book/model/formatter'
	}"
>
    <Page
        class="customBackground"
        title="{i18n>appTitle}"
        id="page"
        
    >
        <content>
            <Table 
                id="idBooksTable"
                headerText="Прекрасни книги"
                items = "{bookList>/books}"
                growingThreshold="10" growingScrollToLoad="false" growing="true"
                
            >
                <columns>
                <Column width="10em" >
                    <Text text="{i18n>bookAuthor}"/>
                </Column>
                <Column width="8em">
                    <Text text="{i18n>bookTag}"/>
                </Column>
                <Column width="30em">
                    <Text text="{i18n>bookTitle}"/>
                </Column>
                <Column width="30em">
                    <Text text="{i18n>bookLink}"/>
                </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <Text text="{bookList>author}"></Text>
                            <Text text="{bookList>tag}"></Text>
                            <Text text="{bookList>title}"></Text>
                            <Text text="{bookList>link}"></Text>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
