<mvc:View
    controllerName="com.genrep.book.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'com/genrep/book/model/formatter'
	}"
>
    <Page
        class="customBackground"
        title="{i18n>appTitle}"
        id="idBookPage"
    >
        <content>
            <Table
                id="idBooksTable"
                headerText="Прекрасни книги"
                items="{bookList>/books}"
                growingThreshold="15"
                growingScrollToLoad="false"
                growing="true"
                selectionChange="onSelectionChange"
            >
                <columns>
                    <Column width="10%">
                        <Text text="{i18n>bookAuthor}" />
                    </Column>
                    <Column width="10%">
                        <Text text="{i18n>bookTag}" />
                    </Column>
                    <Column width="30em">
                        <Text text="{i18n>bookTitle}" />
                    </Column>
                    <Column width="50%">
                        <Text text="{i18n>bookLink}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Button
                                type="Transparent"
                                id="idAuthor"
                                text="{bookList>author}"
                                press=".onAuthorOpen(${bookList>author})"
                            />

                            <Text text="{bookList>tag}" />
                            <Text text="{bookList>title}" />
                            <Button
                                type="Transparent"
                                id="idPLayButton"
                                text="{bookList>link}"
                                press=".onPlayVideo(${bookList>author},${bookList>title},${bookList>link})"
                                icon="sap-icon://media-play"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
